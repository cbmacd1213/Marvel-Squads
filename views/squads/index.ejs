<%- include('../partials/header') %>

    <nav>
        <div class="nav-wrapper">
          <ul class="right">
            <li>
              <% if (user) { %>
                  <a href="/logout"><i class="material-icons left"></i>Log Out</a>
              <% } else { %>
                  <a href="/auth/google"><i class="material-icons left"></i>Login with Google</a>
              <% } %>
            </li>
          </ul>
        </div>
      </nav>
      <table id="list">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% squads.forEach(function(squad) { %>
            <tr>
              <td><%= squad.name %></td>
              <td><%= squad.characters %></td>
              <td><a href="/squads/<%=squad._id%>">Details</a>&nbsp;|&nbsp;<a href="/squads/<%=squad._id%>/edit">Edit</a></td>
              <td>
                <form action="/squads/<%=squad._id%>?_method=DELETE" method="POST">
                  <button class="red-button" type="submit">X</button>
                </form>
            </td>
            </tr>
            <% }); %>
          </tbody>
        </table>


<%- include('../partials/footer') %>